    <script>
      var main = {
        init : function () {
            var _this = this;
            $('#logout_btn').on('click', function () {
                _this.logout_btn();
            });
            $('#search_btn').on('click', function () {
              _this.search_btn();
            });
            $('#create_btn').on('click', function () {
              _this.create_btn();
            });
        },
        logout_btn : function () {
          $.ajax({
            url: '/logout',
            type: 'GET',
            contentType:'application/json; charset=utf-8',
          }).done(function(data){
              if(data.msg == '로그아웃완료'){
                  alert("로그아웃 되었습니다.");
                  window.location.href = '/';
              }
          }).fail(function(data){
            alert(JSON.stringify(data));
          });
        },
        search_btn : function () {
          var data = {
            search: $('#search').val()
          };
          var data_json = JSON.stringify(data);
    
          $.ajax({
            url: 'http://localhost:8080/search',
            type: 'POST',
            contentType:'application/json; charset=utf-8',
            data: data_json
          }).done(function(data){
              if(data.msg == '없음'){
                  alert("검색하신 데이터가 없습니다");
                  window.location.href = '/getcomm';
              }
          }).fail(function(data){
            alert(JSON.stringify(data));
          });
        }
    };
    main.init();
    </script>
